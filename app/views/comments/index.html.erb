<p id="notice"><%= notice %></p>

<h3>Comments</h3>
<br>
<table class="table table-striped">
  <thead class="thead-light">
    <tr>
      <th>User name</th>
      <th>Body</th>
      <th>Idea</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.user_name %></td>
        <td><%= comment.body %></td>
        <td><%= comment.idea_id %></td>
        <td><%= link_to 'Show', comment, class: "btn btn-outline-primary" %></td>
        <td><%= link_to 'Edit', edit_comment_path(comment), class: "btn btn-outline-warning" %></td>
        <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_comment_path, class: "btn btn-primary" %>
