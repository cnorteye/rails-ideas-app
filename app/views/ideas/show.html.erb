<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-4">
    <p><b>Idea Title </b><%= @idea.name %></p>
    <p><b>Description: </b><%= @idea.content %></p>


    <div>
        <p>
          <%= link_to 'Edit', edit_idea_path(@idea) , :class=>"btn btn-outline-warning" %>
          <%= link_to 'Destroy', @idea, data: { confirm: 'Are you sure?' }, method: :delete , :class=>"btn btn-outline-danger"  %>
          <%= link_to 'Back', ideas_path , :class=>"btn btn-outline-success"  %>
        </p>
      </div>

      <div class="col-md-9">
        <%= image_tag(@idea.picture, width: '100%') if @idea.picture.present? %>
      </div>
<br>
  <!--<h3>Add a thought</h3> -->
    <% @comments.each do |comment| %>
  <div class="form-group">
  <strong><%= comment.user_name %></strong>
    <br>
    <p class="form-control"><%= comment.body %></p>
    <p><%= link_to 'Delete', comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' } %></p>
  </div>
<% end %>
<p>
  <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
  Additional Thought
  </button>
</p>
<div class="collapse" id="collapseExample">
  <div class="card card-body">
    <%= render partial: 'comments/form', locals: { comment: @comment } %>
  </div>
</div>

  </div>
</div>
